<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseText">
        <item name="fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="TitleItems" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">1</item>
    </style>
    <style name="SubtitleItems" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Title1" parent="BaseText">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Title2" parent="BaseText">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="Title3" parent="BaseText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Subtitle1" parent="BaseText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BodyText1" parent="BaseText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="NormalWithoutFontText">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ButtonPrimary" parent="BodyText1">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:textColor">@color/button_textcolor_selector</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="ButtonSecondary" parent="BodyText1">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_secondary_selector</item>
        <item name="android:textColor">@color/button_textcolor_selector</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="FormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintTextColor">@color/secondary</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/accent</item>
    </style>

    <!-- DetailHeroFragment -->
    <style name="DivideDetailHero" parent="Title3">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/divide_detail_shape</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="DetailHeroText" parent="Subtitle1">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DetailHeroTextData" parent="NormalWithoutFontText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>